<h1>Editing Book</h1>

<!--エラー用-->
  <% if @book.errors.any? %>
    <div class="errors">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>


<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

<%= f.submit 'Update Book' %>

<% end %>
<%= link_to "Show" , book_path(@book.id) %>
